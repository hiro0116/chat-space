.chat-message
  .chat-message__name
    = message.user.name
  .chat-message__day
    = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
.chat-message__text
  - if message.content.present?
    %p.Message__content
      = message.content
  = image_tag message.image.url, class: "text__image" if message.image.present?