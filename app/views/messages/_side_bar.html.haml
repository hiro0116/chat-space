.side-bar
  .side-header
    .top-items
      %h3.top-items__name
        = current_user.name
      %ul.top-items__icons
        %li.top-items__icons__icon
          = link_to new_group_path do
            =icon('fas', 'edit')
        %li.top-items__icons__icon
          = link_to edit_user_path(current_user) do
            =icon('fas', 'cog')
  .side-group
    - current_user.groups.each do |group|
      .group-list
        = link_to '#' do
          .group-list__name
            = group.name
          .group-list__message
            メッセージはまだありません