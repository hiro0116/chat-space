.side-bar
  .side-header
    .top-items
      %h3.top-items__name
        = current_user.name
      %ul.top-items__icons
        %li.top-items__icons__icon
          = link_to new_group_path, class: "top-items__icons__icon-btn" do
            =icon('fas', 'edit')
        %li.top-items__icons__icon
          = link_to edit_user_path(current_user), class: "top-items__icons__icon-btn" do
            =icon('fas', 'cog')
  .side-group
    - current_user.groups.each do |group|
      .group-lists
        = link_to group_messages_path(group), class: "group-list" do
          .group-lists__name
            = group.name
          .group-lists__message
            = group.show_last_message