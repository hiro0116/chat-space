.main-chat
  .chat__header
    .chat__group
      .chat__group-name
        = @group.name
      .chat__member-name
        Member : 
        %ul
          - @group.users.each do |user|
            %li= user.name
    .chat__btn 
      = link_to "Edit", edit_group_path(@group), class: "chat__btn-edit"
  .chat-log
    = render @messages
  .chat-form
    = form_with model: [@group, @message], html: {class: "form"},local: true do |f|
      .message
        = f.text_field :content, class: "text", placeholder: "type a message"
        = f.label :image, class: "img" do
          = icon('far', 'image')
          = f.file_field :image, class: "file"
      = f.submit "Send", class: "send-btn"
